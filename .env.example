# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
FATHOM_API_KEY=your_fathom_api_key_here

# Crono CRM API (Optional - for automatic note creation)
CRONO_API_KEY=your_crono_api_key_here
CRONO_API_URL=https://dev.api.crono.one/cronoapi-e3b0madc44269/v1

# Gmail API - will be set up via OAuth (credentials.json file)
# You'll need to download credentials.json from Google Cloud Console

# Slack Integration (Optional - for interactive message workflow)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret-here
SLACK_CHANNEL=#sales

# Database Configuration (PostgreSQL)
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://user:password@localhost:5432/slack_fathom_crono

# Database Connection Pool Settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Database Debug (set to 'true' to log SQL statements - development only!)
DATABASE_ECHO=false

# Redis Configuration (optional, for tenant caching)
# If disabled, tenant data will be loaded from database on every request
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379/0
TENANT_CACHE_TTL=300  # Cache TTL in seconds (default: 5 minutes)
