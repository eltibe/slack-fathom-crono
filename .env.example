# ===========================================
# Slack Configuration
# ===========================================
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_CHANNEL=#sales

# ===========================================
# Database Configuration (Supabase)
# ===========================================
DATABASE_URL=postgresql://user:password@host:port/database
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false

# ===========================================
# AI/ML APIs
# ===========================================
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GEMINI_API_KEY=your-gemini-key-here

# ===========================================
# Fathom API
# ===========================================
FATHOM_API_KEY=your-fathom-api-key-here

# ===========================================
# Crono CRM API
# ===========================================
CRONO_API_KEY=your-crono-private-key-here
CRONO_PUBLIC_KEY=your-crono-public-key-here
CRONO_API_URL=https://ext.crono.one/v1
CRM_PROVIDER=crono

# ===========================================
# Google OAuth2 (Gmail)
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===========================================
# Redis (Optional - for caching)
# ===========================================
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/0
TENANT_CACHE_TTL=300

# ===========================================
# Flask Environment
# ===========================================
FLASK_ENV=production
PORT=3000

# ===========================================
# Notes:
# ===========================================
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env file to git (already in .gitignore)
# 3. For production, set these in your hosting platform (Render, Railway, etc.)
# 4. DATABASE_URL format: postgresql://user:password@host:port/database
# 5. Get SLACK_BOT_TOKEN from https://api.slack.com/apps
# 6. Get ANTHROPIC_API_KEY from https://console.anthropic.com
